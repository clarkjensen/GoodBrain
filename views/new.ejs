<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Say some good things about yourself!</h1>
        <div class="col-6 offset-3">
            <form action="/new" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <textarea class="form-control" name="goodThing[text]" id="goodThing" cols="30" rows="3"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Good Thing</button>
                </div>
            </form>
        </div>
    </div>